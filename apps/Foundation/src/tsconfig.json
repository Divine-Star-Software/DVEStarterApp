{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./",
    "rootDirs": [],
    "composite": true,
    "types": ["react"],
    "outDir": "../dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@databases/*": ["./databases/*"]
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react-jsx"
  }
}
